---
import Layout from "./Layout.astro";
import type { MarkdownLayoutProps } from 'astro';

type Props = MarkdownLayoutProps<{
  // Define frontmatter props here
  title: string;
  showHeader?: boolean;
}>;

const { frontmatter } = Astro.props;
const { title, showHeader } = frontmatter;
---

<Layout title={title}>
  <div class="mx-auto container max-w-3xl my-4 md:my-16" astro-content>
    {showHeader && (
      <header class="flex flex-col items-center gap-4 tracking-wide">
      <h1 class="font-semibold md:font-bold text-2xl md:text-3xl text-center">{title}</h1>
    </header>
    )}
    <article class="px-4 prose dark:prose-invert mt-8">
      <slot />
    </article>
  </div>
</Layout>
